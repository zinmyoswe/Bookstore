@model Author

<form method="post">

    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Author</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">Author Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Author" asp-action="Index" class="btn btn-outline-dark  form-control">
                    Back
                </a>
            </div>
        </div>


    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
